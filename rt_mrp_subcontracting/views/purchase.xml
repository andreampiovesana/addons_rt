<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="purchase_order_form_sub" model="ir.ui.view">
        <field name="name">purchase.order.form.sub</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <field name="subcontract_picking_out_id" invisible="1"/>
                <button type="object"
                    name="action_view_subcontract_picking_out"
                    class="oe_stat_button"
                    icon="fa-truck fa-flip-horizontal"
                    string="To Sub"
                    attrs="{'invisible': [('order_type','!=',%(po_type_subcontracting)d)]}"
                    groups="base.group_user">
                </button>
                <button type="object"
                    name="action_view_subcontract_picking_in"
                    class="oe_stat_button"
                    style="color:tomato;"
                    string="From Sub"
                    icon="fa-truck"
                    attrs="{'invisible': [('order_type','!=',%(po_type_subcontracting)d)]}"
                    groups="base.group_user">
                </button>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="after">
                <field name="workorder_id"></field>
                <field name="production_id"></field>
                <field name="production_product_id"></field>
            </xpath>
            <xpath expr="//field[@name='order_line']/form//field[@name='product_id']" position="after">
                <field name="workorder_id"></field>
                <field name="production_id"></field>
                <field name="production_product_id"></field>
            </xpath>
        </field>
    </record>

</odoo>
